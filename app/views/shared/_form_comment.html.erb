<%= form_with model: Comment.new, id: "commentForm", url: comments_path, class: 'form-group' do |form| %>

  <%= hidden_field_tag(:listing_id, @listing.id) %>

  <div>
    <%= form.text_field :title, id: "commentTitle", class: 'form-control', placeholder: 'Title' %>
  </div><br>
  
  <div>
    <%= form.text_area :body, id: "commentBody", rows: '4', class: 'form-control', placeholder: 'Text' %>    
  </div><br>

  <div>
    <%= form.submit 'Comment', class: 'btn btn-dark' %>
  </div>

<% end %>